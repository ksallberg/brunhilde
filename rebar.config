{require_otp_vsn, "R16|17|18|19"}.

{lib_dirs, ["deps"]}.

{plugins, [rebar3_hex]}.

{erl_opts, [ warnings_as_errors
           , debug_info
           ]}.

{xref_checks, [ undefined_function_calls
              , deprecated_function_calls]}.

{deps, [ {jsx, "2.8.0"}
       , {erlydtl, "",
               {git, "https://github.com/erlydtl/erlydtl.git",
               {tag, "0.12.0"}}}

       , {proper, "",
               {git, "https://github.com/manopapad/proper.git",
               {tag, "v1.2"}}}

       ]}.
